<form action="/searches/save_id" method="post" id="<%= book.isbn %>">
  <fieldset>
    <input type="text" name="title" value="<%= book.title %>" placeholder="Title" />
    <input type="text" name="author" value="<%= book.author %>" placeholder="" />
    <input type="text" name="isbn" value="<%= book.isbn %>" />
    <input type="textarea" name="description" value="<%= book.description %>" placeholder="Quick description of book" />

    <!-- bookshelf option -->
    <input type="text" name="bookshelf" value="<%= book.bookshelf %>" />
    <input type="text" name="image_url" value="<%= book.image_url %>" />

    <p>Enter Bookshelf Here:</p>
    <input type="text" name="bokoshelf" required>

    <!-- end bookshelf option -->


    <!-- 'add book'||'save changes' option -->

    <button id="showme-btn" type="submit">Add to Collection</button>
    <!-- end add/update button -->
  </fieldset>

</form>


<!-- we want to pass the object into the form, and we want form to be empty would be {book:''}, for prepopulated it would maybe be {book:book} -->