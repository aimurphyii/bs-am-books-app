<section id="" class="book-container detail">

  <img src=<%= book.image_url %> alt=Cover for <%= book.title %> />
  <h2><%= book.title %></h2>
  <h3><%= book.author %></h3>
  <!-- you can class these for hiding -->
  <p><%= book.description %></p>
  <p>ISBN <%= book.isbn %></p>
  <p>Bookshelf <%= book.bookshelf %></p>

  <form action="/searches/save_id" method="post" id="<%= book.isbn %>">
    <input type="text" name="title" value="<%= book.title %>" />
    <input type="text" name="author" value="<%= book.author %>" />
    <input type="text" name="isbn" value="<%= book.isbn %>" />
    <input type="textarea" name="description" value="<%= book.description %>" />
    <input type="text" name="bookshelf" value="<%= book.bookshelf %>" />
    <input type="text" name="image_url" value="<%= book.image_url %>" />
    <button type="button" name="<%= book.isbn%>">Update Details</button>
    <button type="submit">Delete Book</button>
  </form>
</section>